# Vault SSH CA Demo - Terraform Variables
#
# Copy to terraform.tfvars and fill in your values.
#
# Prerequisite: Create a job template in AAP first, then get its ID from the URL.

# -----------------------------------------------------------------------------
# AAP (required)
# -----------------------------------------------------------------------------

aap_host            = "https://aap.example.com"
aap_username        = "admin"
aap_password        = ""  # Use TF_VAR_aap_password env var
aap_job_template_id = 42  # Get from AAP UI: Templates > Your Template > ID in URL

# -----------------------------------------------------------------------------
# Vault (required)
# -----------------------------------------------------------------------------

vault_addr      = "https://vault.example.com:8200"
vault_token     = ""  # Use VAULT_TOKEN env var or TF_VAR_vault_token
vault_namespace = "admin"  # Leave empty for OSS Vault

