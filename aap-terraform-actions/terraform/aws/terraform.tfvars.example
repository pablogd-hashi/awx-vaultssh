# -----------------------------------------------------------------------------
# Example terraform.tfvars for AWS Deployment
# Copy to terraform.tfvars and fill in your values
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
aws_region      = "us-east-1"
environment     = "dev"
resource_prefix = "vault-ssh-demo"

# -----------------------------------------------------------------------------
# Vault Configuration
# -----------------------------------------------------------------------------
vault_addr            = "https://vault.example.com:8200"
vault_token           = "hvs.xxxxx"                    # Vault admin token
vault_namespace       = "admin"                        # Use "admin" for HCP Vault, "" for OSS
vault_skip_tls_verify = false
vault_ssh_mount_path  = "ssh"
vault_ssh_role        = "aap-ssh"

# -----------------------------------------------------------------------------
# AAP Configuration
# -----------------------------------------------------------------------------
aap_host              = "https://aap.example.com"
aap_username          = "admin"
aap_password          = "your-aap-password"
aap_job_template_name = "vault-ssh-configure"
aap_inventory_name    = "vault-ssh-inventory"
aap_organization_name = "Default"

# -----------------------------------------------------------------------------
# Credential Option
# Option A: Vault Secrets Lookup - ephemeral key pairs from /ssh/issue
# Option B: Vault Signed SSH - signs static key via /ssh/sign
# -----------------------------------------------------------------------------
credential_option = "A"

# -----------------------------------------------------------------------------
# VM Configuration
# -----------------------------------------------------------------------------
vm_count        = 2
instance_type   = "t3.micro"
ami_id          = ""                          # Leave empty to use latest golden image
ami_name_filter = "rhel9-vault-ssh-ca-*"
ssh_user        = "ansible"

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
vpc_cidr          = "10.0.0.0/16"
subnet_cidr       = "10.0.1.0/24"
allowed_ssh_cidrs = ["0.0.0.0/0"]             # Restrict in production!

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
app_port = 8501
